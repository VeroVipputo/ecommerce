{
  "name": "ecomerce",
  "version": "1.0.0",
  "description": "Mi primer proyecto con Node",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "server": "nodemon index.js",
    "css": "postcss public/css/tailwind.css -o public/css/app.css",
    "start:css": "public/css/tailwind.css -o public/css/app.css --watch",
    "build": "npm run build:css && react-scripts build",
    "build:css": "NODE_ENV=production tailwindcss -o src/tailwind.css -m"
  },
  "keywords": [
    "MVC",
    "Pug",
    "Tailwind",
    "mySQL",
    "Sequalize"
  ],
  "author": "Diego Daniel Tettamanti",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.1",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.18.6",
    "autoprefixer": "^10.4.7",
    "nodemon": "^2.0.19",
    "postcss": "^8.4.14",
    "postcss-cli": "^10.0.0",
    "tailwindcss": "^3.1.6"
  }
}
